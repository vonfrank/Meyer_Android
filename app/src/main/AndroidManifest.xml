<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group3.meyer_android">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".model.ApplicationData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.CreateActivity" android:screenOrientation="portrait" />
        <activity android:name=".controller.JoinActivity" android:screenOrientation="portrait" />
        <activity android:name=".controller.BluetoothListActivity" android:screenOrientation="portrait" />
        <activity android:name=".controller.ListenActivity" android:screenOrientation="portrait" />
    </application>

</manifest>
